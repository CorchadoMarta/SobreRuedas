    </div>   
    <script type="text/javascript">
        $(document).ready(function() {
            $('#datePicker').datepicker({
                format: 'mm/dd/yyyy',
                startDate: '01/01/1950',
                endDate: '30/12/1998'
            });



            var url = window.location.href; 
            var nuevaVar = url.slice(-1);
            $('#inlineRadio' + nuevaVar).prop( "checked", true );
            $('#validatorForm').bootstrapValidator({
                message: 'Campo no válido, vuelve a intentarlo',
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                fields: {
                    nombre: {
                        row: '.col-sm-4',
                        message: 'Nombre no válido',
                        validators: {
                            notEmpty: {
                                message: 'El nombre és obligatorio, no puede esta vacio'
                            },
                            stringLength: {
                                min: 3,
                                max: 50,
                                message: 'El nombre no puede ser más corto de 2 letras ni más largo de 20'
                            },
                            regexp: {
                                regexp: /^[ñA-Za-z _]*[ñA-Za-z][ñA-Za-z _]*$/,
                                message: 'El nombre solo puede contener letras y espacios'
                            }
                        }
                    },
                    apellidos: {
                        message: 'Apellidos no válidos',
                        validators: {
                            notEmpty: {
                                message: 'El apellido és obligatorio, no puede esta vacio'
                            },
                            stringLength: {
                                min: 3,
                                max: 20,
                                message: 'El apellido no puede ser más corto de 2 letras ni más largo de 20'
                            },
                            regexp: {
                                regexp: /^[ñA-Za-z _]*[ñA-Za-z][ñA-Za-z _]*$/,
                                message: 'El apellido solo puede contener letras y espacios'
                            }
                        }
                    },
                    dni: {
                        validators: {
                            id: {
                                country: 'ES',
                                message: 'DNI no válido (recuerda: letras en mayúscula)'
                            }
                        }
                    },
                    fechNacimiento: {
                        validators: {
                            notEmpty: {
                                message: 'Necesitas escoger una fecha'
                            },
                            date: {
                                format: 'MM/DD/YYYY',
                                message: 'La fecha no es válida.'
                            }
                        }
                    },
                    calle: {
                        message: 'Dirección no valida',
                        validators: {
                            notEmpty: {
                                message: 'La dirección és obligatoria, no puede esta vacio'
                            },
                            stringLength: {
                                min: 3,
                                max: 20,
                                message: 'La dirección no puede ser más corto de 2 letras ni más largo de 20'
                            },
                            regexp: {
                                regexp: /^[a-zA-Z0-9\s]+$/,
                                message: 'La dirección solo puede contener letras, numeros y espacios'
                            }
                        }
                    },
                    num: {
                        validators: {
                            notEmpty: {
                                message: 'Campo obligatorio, no puede estar vacío'
                            },
                            regexp: {
                                message: 'El numero tiene un máximo de 4 cifras',
                                regexp: /^[0-9]{1,4}$/
                            }
                        }
                    },
                    cp: {
                        validators: {
                            notEmpty: {
                                message: 'Campo obligatorio, no puede estar vacío'
                            },
                            regexp: {
                                message: 'El codigo postal sólo puede contener 5 numeros',
                                regexp: /^[0-9]{5}$/
                            }
                        }
                    },
                    provincia: {
                        message: 'Provincia no válida',
                        validators: {
                            notEmpty: {
                                message: 'La provincia és obligatoria, no puede estar vacio'
                            },
                            stringLength: {
                                min: 2,
                                max: 20,
                                message: 'La provincia no puede ser más corta de 2 letras ni más largo de 20'
                            },
                            regexp: {
                                regexp: /^[a-zA-Z]+$/,
                                message: 'La provincia solo puede contener letras'
                            }
                        }
                    },
                    pais: {
                        message: 'País no válida',
                        validators: {
                            notEmpty: {
                                message: 'El país és obligatorio, no puede estar vacio'
                            },
                            stringLength: {
                                min: 2,
                                max: 20,
                                message: 'El país no puede ser más corto de 2 letras ni más largo de 20'
                            },
                            regexp: {
                                regexp: /^[a-zA-Z]+$/,
                                message: 'El país solo puede contener letras'
                            }
                        }
                    }
                }
            });
        });
    </script>

