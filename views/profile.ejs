    <div id="container-img-profile" ng-controller="datosUsuario">
        <div class="container">
            <div id="panel-form">
                <div class="row">
                    <div class="col-sm-3">
                        <img src="img/avatar.gif" class="img-circle img-user-profile" />
                    </div>
                    <div class="col-sm-6" ng-init="datosUserFunction()">
                        <p class="title">Datos de perfil</p>
                        <div class="row" ng-hide="editor">
                            <div class="col-sm-6">
                                <p class="datos">Nombre: <span class="datos-user"> {{ datos[0].nombre }}</span></p>
                                <p class="datos">Apellidos: <span class="datos-user"> {{ datos[0].apellidos }}</span></p>
                                <p class="datos">DNI: <span class="datos-user"> {{ datos[0].dni }}</span></p>
                                <p class="datos">Fecha de nacimiento: <span class="datos-user"> {{ datos[0].fechNacimiento | date:'dd-MM-yyyy'}}</span></p>
                            </div>
                            <div class="col-sm-6">
                                <p class="datos">Dirección: <span class="datos-user"> {{ datos[0].direccion.calle + " " + datos[0].direccion.num }}</span></p>
                                <p class="datos">Codigo postal: <span class="datos-user"> {{ datos[0].direccion.cp }}</span></p>
                                <p class="datos">Provincia: <span class="datos-user"> {{ datos[0].direccion.provincia }}</span></p>
                                <p class="datos">País: <span class="datos-user"> {{ datos[0].direccion.pais }}</span></p>
                            </div>
                        </div>
                        <div class="row" ng-show="editor">
                            <form id="validatorForm" class="form-horizontal" role="form" action="" method="post" >
                            <div class="col-sm-6">
                                <p class="datos">Nombre: <span class="datos-user"><input type="text" class="form-control" name="nombre" ng-model="editaNombre" ng-show="editor" placeholder="{{ datos[0].nombre }}"></span></p>
                                <p class="datos">Apellidos: <span class="datos-user"><input type="text" class="form-control" name="apellidos" ng-model="editaApellidos" ng-show="editor" placeholder="{{ datos[0].apellidos }}"></span></p>
                                <p class="datos">DNI: <span class="datos-user"><input type="text" class="form-control" name="dni" ng-model="editaDni" ng-show="editor" placeholder="{{ datos[0].dni }}"></span></p>
                                <p class="datos">Fecha de nacimiento: <span class="datos-user">

                                    <div class="input-group input-append date" id="datePicker">
                                        <input type="text" class="form-control" name="fechNacimiento" ng-model="editaFecha" ng-show="editor" placeholder="{{ datos[0].fechNacimiento | date:'dd-MM-yyyy'}}" />
                                        <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>

                                    </span></p>
                            </div>
                            <div class="col-sm-6">
                                <p class="datos">Dirección: <span class="datos-user"><input type="text" class="form-control" name="calle" ng-model="editaCalle" ng-show="editor" placeholder="{{ datos[0].direccion.calle }}"></span>
                                    Numero:<span class="datos-user"><input type="text" class="form-control" name="num" ng-model="editaNum" ng-show="editor" placeholder="{{ datos[0].direccion.num }}"></span></p>
                                <p class="datos">Codigo postal: <span class="datos-user"><input type="text" class="form-control" name="cp" ng-model="editaCp" ng-show="editor" placeholder="{{ datos[0].direccion.cp }}"></span></p>
                                <p class="datos">Provincia: <span class="datos-user"><input type="text" class="form-control" name="provincia" ng-model="editaProvincia" ng-show="editor" placeholder="{{ datos[0].direccion.provincia }}"></span></p>
                                <p class="datos">País: <span class="datos-user"><input type="text" class="form-control" name="pais" ng-model="editaPais" ng-show="editor" placeholder="{{ datos[0].direccion.pais }}"></span></p>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-3" ng-hide="editor">
                        <button class="btn btn-default" ng-click="editar()">Editar perfil</button>
                    </div>
                    <div class="col-sm-3" ng-show="editor">
                        <button class="btn btn-default" ng-click="guardar()">Guardar</button>
                        <button class="btn btn-default" ng-click="cancelar()">Cancelar</button>
                        </form>
                    </div>
                </div>
            </div>
