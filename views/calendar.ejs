</head>
<body data-spy="scroll" data-target=".navbar" data-offset="50">
	<% include ./partials/navbar %>

 <!-- Cabecera -->
 	<div id="container-img-calendar">
	</div>

<!-- Calendar -->
<div class="background">
    <div class="container">
        <h3 class="align-center">Horario de prácticas de esta semana</h3>
		<div class="table-responsive">
			<table class="table table-striped table-hover" id="miTabla"></table>
		</div>
	</div>
</div>
	<!-- fin Calendar -->

	<script>
	function myFunction() {
	    var d = new Date();
	    d.setHours(8);
	    document.getElementById("demo").innerHTML = d;
	}

	//Dónde colocaremos la tabla
	var table = document.getElementById("miTabla");

	function crearTablero(){
	  var d = new Date();
	  d.setHours(7);
        d.setMinutes(15);
	  var row = table.insertRow(0);
	  row.insertCell(0).innerHTML = "Sábado";
	  row.insertCell(0).innerHTML = "Viernes";
	  row.insertCell(0).innerHTML = "Jueves";
	  row.insertCell(0).innerHTML = "Miercoles";
	  row.insertCell(0).innerHTML = "Martes";
	  row.insertCell(0).innerHTML ="Día " + d.getDate();
	  row.insertCell(0).innerHTML = "Horas";
	  for ( var i = 1; i <= 17 ; i++){
	    var row2 = table.insertRow(i);
	      for ( var j = 0; j < 6 ; j++){
	        row2.insertCell(0).innerHTML = "";
	      }
          d.setMinutes(d.getMinutes() + 45);
	      row2.insertCell(0).innerHTML = d.getHours() + ":" + d.getMinutes();
	    }
	}
	crearTablero();

	table.addEventListener("click", function(e){
	  if(e.target == "[object HTMLTableCellElement]"){
	    if(e.target.style.backgroundColor == "white"){
	      e.target.style.backgroundColor = "red";
	    }else{
	      e.target.style.backgroundColor = "white";
	    }
	  }
	});
	</script>
	<!-- fin Calendar -->


